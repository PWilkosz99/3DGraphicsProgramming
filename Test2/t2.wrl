DEF Floor Transform {
	translation 0 0 0
	children [
		Shape {
			appearance Appearance {     
                texture ImageTexture{
                    url "wood.jpg"
                }
			} 
			geometry Box {
				size 100 1 100
			}
		}
	]
}

DEF LEFT_WALL Transform {
	rotation 0 1 0 1.57
	translation -50 25 0
	children [
		Shape {
			appearance Appearance {     
                texture ImageTexture{
                    url "wall.jpg"
                }
			} 
			geometry Box {
				size 100 50 1
			}
		}
	]
}

DEF RIGHT_WALL Transform {
	translation 100 0 0
	children [ USE LEFT_WALL ]
}

DEF SCREEN Transform {
	translation 0 25 -50
	children [ 
		Shape {
			geometry Box {
				size 100 50 2
			}
		}
	]
}

DEF SEAT Transform{
	translation 0 0 0
	children [
		Shape {
			appearance Appearance {     
				texture ImageTexture{
					url "seat.jpg"
				}
			} 
			geometry Box {
				size 10 10 10
			}
		}
	]
}

DEF BACKSEAT Transform{
	translation 0 10 5	
	children [
		Shape {
			appearance Appearance {     
				texture ImageTexture{
					url "seat.jpg"
				}
			} 
			geometry Box {
				size 10 20 2
			}
		}
	]
}

DEF CHAIR Transform{
	translation 20 0 0
	children [
		USE SEAT
		USE BACKSEAT
	]
}

DEF CHAIR2 Transform{
	translation -40 0 0
	children [
		USE CHAIR
	]
}

DEF CHAIR3 Transform{
	translation -60 0 0
	children [
		USE CHAIR
	]
}

DEF CHAIR4 Transform{
	translation 20 0 0
	children [
		USE CHAIR
	]
}

DEF ROW Transform{
	translation 0 0 30
	children [
		USE CHAIR
		USE CHAIR2
		USE CHAIR3
		USE CHAIR4
		USE BACKSEAT
		USE SEAT
	]
}

DEF ROW2 Transform{
	translation 0 0 -60
	children [
		USE ROW
	]
}

